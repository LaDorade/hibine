{
	// enforce those params for consistency
	"svelte.plugin.typescript.enable": true,
	"eslint.validate": [
		"javascript",
		"typescript",
		"svelte"
	],
	"editor.formatOnSave": false,
	"editor.codeActionsOnSave": {
		// conflicts with tabSize
